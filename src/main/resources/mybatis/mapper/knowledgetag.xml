<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.devdotdone.ddd.dao.KnowledgeTagDao">
  <!-- 지식에 태그 추가 -->
  <insert id="insertKnowledgeTag" parameterType="KnowledgeTag">
    INSERT INTO knowledgeTag (knowledge_id, tag_id)
    VALUES (#{knowledgeId}, #{tagId})
  </insert>

  <!-- 지식에 포함된 태그 조회 -->
  <select id="findUsers" parameterType="int" resultType="KnowledgeTag">
    SELECT knowledge_id, tag_id FROM knowledgeTag
    WHERE knowledge_id = #{knowledgeId}
  </select>

  <!-- 지식의 태그 제거 -->
  <delete id="dischargeUsers" parameterType="int">
    DELETE FROM knowledgeTag WHERE tag_id = #{tagId}
  </delete>
</mapper>