<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.devdotdone.ddd.dao.ScheduleMemberDao">
  <!-- 일정을 수행할 멤버 지정/추가 -->
  <insert id="chargeUsers" parameterType="ScheduleMember">
    INSERT INTO scheduleMember (schedule_id, user_id)
    VALUES (#{scheduleId}, #{userId})
  </insert>

  <!-- 단일행 조회 -->
  <select id="selectOne" parameterType="ScheduleMember" resultType="ScheduleMember">
    SELECT schedule_id, user_id FROM scheduleMember
    WHERE schedule_id = #{scheduleId} AND user_id = #{userId}
  </select>

  <!-- 일정을 수행하는 사용자 조회 -->
  <select id="findUsers" parameterType="int" resultType="ScheduleMember">
    SELECT schedule_id, user_id FROM scheduleMember
    WHERE schedule_id = #{scheduleId}
  </select>

  <!-- 특정 사용자가 배정받은 일정 조회 -->
  <select id="findUsers" parameterType="int" resultType="ScheduleMember">
    SELECT schedule_id, user_id FROM scheduleMember
    WHERE user_id = #{userId}
  </select>

  <!-- 일정을 할당받은 멤버 해제 -->
  <delete id="dischargeUsers" parameterType="ScheduleMember">
    DELETE FROM scheduleMember WHERE schedule_id = #{scheduleId} AND user_id = #{userId}
  </delete>

  <!-- 일정 삭제시 모든 멤버 배정 해제 -->
  <delete id="dischargeAll" parameterType="int">
    DELETE FROM scheduleMember WHERE schedule_id = #{scheduleId}
  </delete>
</mapper>