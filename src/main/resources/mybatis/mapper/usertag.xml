<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.devdotdone.ddd.dao.UserTagDao">
    <!-- 사용자에 태그 추가 -->
  <insert id="insertUserTag" parameterType="UserTag">
    INSERT INTO userTag (user_id, tag_id)
    VALUES (#{userId}, #{tagId})
  </insert>

  <!-- 사용자에 포함된 태그 조회 -->
  <select id="findTags" parameterType="int" resultType="UserTag">
    SELECT user_id, tag_id FROM userTag
    WHERE user_id = #{userId}
  </select>

  <!-- 사용자의 태그 제거 -->
  <delete id="deleteTag" parameterType="int">
    DELETE FROM userTag WHERE tag_id = #{tagId}
  </delete>
</mapper>