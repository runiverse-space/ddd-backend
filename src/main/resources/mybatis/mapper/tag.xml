<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.devdotdone.ddd.dao.TagDao">
  <!-- Tag 생성 -->
  <insert id="insertTag" useGeneratedKeys="true" keyProperty="tagId" parameterType="Tag">
    <selectKey keyProperty="tagId" resultType="int" order="BEFORE">
      SELECT seq_tag_tagId.NEXTVAL FROM dual
    </selectKey>
    INSERT INTO tag (tag_id, tagName, tagType)
    VALUES (#{tagId}, #{tagName}, #{tagType})
  </insert>

  <!-- Tag 조회 -->
  <select id="selectTagById" resultType="Tag">
    SELECT tag_id, tagName, tagType
    FROM tag
    WHERE tag_id IN
    <foreach collection="tagIds" item="tagId" open="(" separator="," close=")">
      #{tagId}
    </foreach>
  </select>

  <!-- 모든 Tag 조회 -->
   <select id="selectAllTag" resultType="Tag">
    SELECT tag_id, tagName, tagType FROM tag
   </select>
</mapper>