<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.devdotdone.ddd.dao.ProjectTagDao">
  <!-- 프로젝트에 태그 추가 -->
  <insert id="insertProjectTag" parameterType="ProjectTag">
    INSERT INTO projectTag (project_id, tag_id)
    VALUES (#{projectId}, #{tagId})
  </insert>

  <!-- 프로젝트에 포함된 태그 조회 -->
  <select id="findTags" parameterType="int" resultType="ProjectTag">
    SELECT project_id, tag_id FROM projectTag
    WHERE project_id = #{projectId}
  </select>

  <!-- 프로젝트의 태그 제거 -->
  <delete id="deleteTag" parameterType="int">
    DELETE FROM projectTag WHERE tag_id = #{tagId}
  </delete>
</mapper>